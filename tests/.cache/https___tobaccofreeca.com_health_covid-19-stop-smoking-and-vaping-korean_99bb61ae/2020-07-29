	function facebookLike() {
		FB.login(function(response) {
		    // handle the response
		}, {
		    scope: 'user_birthday', 
		    return_scopes: true
		});
		// make the API call
		FB.api(
		    "/me/og.likes",
		    "POST",
		    {
		        "object": "https:\/\/www.facebook.com\/TobaccoFreeCA"
		    },
		    function (response) {
		      if (response && !response.error) {
		        // handle the result
		      }
		    }
		);
	}
