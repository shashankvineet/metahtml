		let ab_root= $('.wxc-ab-root')
		let ab_whitelist= $('.wxc-whitelist-root');
		let bodyEl = document.body
		let ab_top = 0
		ab_root.hide();
		ab_whitelist.hide();
		function stopBodyScroll (isFixed) {
		if (isFixed) {
			ab_left = (window.innerWidth-1000)/2;

			bodyEl.style.position = 'fixed';
			bodyEl.style.left = ab_left + 'px';
		} else {
			bodyEl.style.position = ''
			bodyEl.style.top = ''
			window.scrollTo(0, ab_top) 
		}
		}
		$('.wxc-button-whitelist').click(
		function(){
			toggleADalert()
		}
		)
		$('.ab_help_close').click(
		function(){
			toggleADalert()
		}
		)
		function toggleADalert(){
		ab_root.toggle();
		ab_whitelist.toggle();
		}
		function switchTab(id){
		for(let i=0;i<4;i++){
			$('.body'+i).hide();
			$('.tab'+i).removeClass('active');
		}
		$('.body'+id).show();
			$('.tab'+id).addClass('active');
		}

		// =====
		window.onload = function(){
			if(typeof(adsbygoogle)==='undefined' && location.pathname.indexOf(/202006/73963/1824)!=-1) {
				stopBodyScroll(true);
				ab_root.show();
				switchTab(0);
			}else{
				stopBodyScroll(false);
				ab_root.hide();
			}
		}
	</script>
