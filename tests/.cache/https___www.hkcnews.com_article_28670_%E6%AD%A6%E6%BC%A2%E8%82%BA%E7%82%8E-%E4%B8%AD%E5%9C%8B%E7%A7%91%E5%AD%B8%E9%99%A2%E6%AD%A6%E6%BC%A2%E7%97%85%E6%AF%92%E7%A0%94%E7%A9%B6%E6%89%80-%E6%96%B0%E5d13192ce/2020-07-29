<script type="ae976521ec210490488121f3-text/javascript">
        $(function() {
			initVariables();
			initHeadroom();
			initMasonryGrid ();
			initLoader();
			// initSlider();
			initPinnedButton();
			adjustMobileHorizontalMenu();
			FontSizeAdjustment.init();
			bindButtonEvents();
			
			$PINNED = function () {
				if ($Pin.mpin.is(":visible")) {
					var target = $Pin.mpin;
					var triggerWapPoint = $Pin.mpinWayPoint;
				}
				else {
					var target = $Pin.pin;
					var triggerWapPoint = $Pin.pinWayPoint;
				}

				if (target.outerHeight(true) < $Pin.wrapper.outerHeight(true)) {
					var windowBottom = Sticker.windowBottom();
					if (windowBottom <= triggerWapPoint) {
						Sticker.topCss(target)
					}
					else {
						$Pin.wrapperWayPoint = Sticker.bottomWayPoint($Pin.wrapper);
						if (windowBottom >= $Pin.wrapperWayPoint) {
							Sticker.bottomCss(target);
						}
						else {
							Sticker.betweenCss(target);
						}
					}
				}
			};

			bindEvents();

			$("iframe").each(function(){
				var $iframe = $(this);
				var src = $iframe.attr('src');
				if (src.match(/youtube\.com/g))
					$iframe.attr('src', src + '?html5=1');
			});
        });
