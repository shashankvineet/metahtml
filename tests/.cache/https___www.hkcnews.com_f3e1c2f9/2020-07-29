			initVariables();
			initHeadroom();
			initMasonryGrid ();
			initLoader();
			initSlider();
			initPinnedButton();

			setTimeout(function(){
				$IN_INFINITE_SCROLL = true;

				// $Pin.pin = $(".pinned");
				// $Pin.pinWayPoint = Sticker.bottomWayPoint($Pin.pin);
				//
				// $Pin.wrapper = $(".pinned-button-container");
				// $Pin.wrapperWayPoint = Sticker.bottomWayPoint($Pin.wrapper);
				//
				// $Pin.mpin = $(".mobile-pinned");
				// $Pin.mpinWayPoint = Sticker.bottomWayPoint($Pin.mpin);

				$PINNED = function () {
					if ($Pin.mpin.is(":visible")) {
						var target = $Pin.mpin;
						var triggerWapPoint = $Pin.mpinWayPoint;
						// console.log('m', triggerWapPoint);
					}
					else {
						var target = $Pin.pin;
						var triggerWapPoint = $Pin.pinWayPoint;
						// console.log('d', triggerWapPoint);
					}

					if (target.outerHeight(true) < $Pin.wrapper.outerHeight(true)) {
						var windowBottom = Sticker.windowBottom();
						if (windowBottom <= triggerWapPoint) {
							Sticker.topCss(target)
						}
						else {
							$Pin.wrapperWayPoint = Sticker.bottomWayPoint($Pin.wrapper);
							if (windowBottom >= $Pin.wrapperWayPoint) {
								Sticker.bottomCss(target);
							}
							else {
								Sticker.betweenCss(target);
							}
						}
					}
				};

				bindEvents();
			}, 500);

			bindButtonEvents();
		});
    </script>
