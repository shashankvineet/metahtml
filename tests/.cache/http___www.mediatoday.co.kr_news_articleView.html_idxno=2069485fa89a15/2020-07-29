				data-url="http%3A%2F%2Fwww.mediatoday.co.kr%2Fnews%2FarticleView.html%3Fidxno%3D206948" 
				data-desc="20%EC%9D%BC%EB%8F%99%EC%95%88%20%EA%B5%AD%EB%82%B4%EC%99%B8%EB%A5%BC%20%EB%93%A4%EC%8D%A9%EC%9D%B4%EA%B2%8C%20%ED%96%88%EB%8D%98%20%EA%B9%80%EC%A0%95%EC%9D%80%20%EB%B6%81%ED%95%9C%20%EA%B5%AD%EB%AC%B4%EC%9C%84%EC%9B%90%EC%9E%A5%20%EA%B1%B4%EA%B0%95%EC%9D%B4%EC%83%81%EC%84%A4%EA%B3%BC%20%EC%82%AC%EB%A7%9D%EC%84%A4%EC%9D%B4%20%EA%B9%80%20%EC%9C%84%EC%9B%90%EC%9E%A5%EC%9D%98%20%EB%93%B1%EC%9E%A5%EC%9C%BC%EB%A1%9C%20%EB%AC%B4%EC%83%89%ED%95%B4%EC%A1%8C%EB%8B%A4.%20%E2%80%98%EC%A7%80%EB%82%9C%EC%A3%BC%EC%97%90%20%EC%82%AC%EB%A7%9D%2C%2099%25%E2%80%99%20%E2%80%98%ED%98%BC%EC%9E%90%20%EB%AA%BB%EA%B1%B8%EC%96%B4%E2%80%99%20%EB%93%B1%20%EA%B7%B9%EB%8B%A8%EC%A0%81%EC%9D%B4%EA%B3%A0%20%EB%8B%A8%EC%A0%95%EC%A0%81%EC%9D%B8%20%EC%A3%BC%EC%9E%A5%EC%9D%84%20%ED%8E%B8%20%ED%83%88%EB%B6%81%EB%AF%BC%20%EC%B6%9C%EC%8B%A0%20%EA%B5%AD%ED%9A%8C%EC%9D%98%EC%9B%90%20%EB%8B%B9%EC%84%A0%EC%9E%90%EB%8F%84%20%EB%AC%B8%EC%A0%9C%EC%A7%80%EB%A7%8C%2C%20%EC%9D%B4%EB%93%A4%EC%9D%98%20%EC%A3%BC%EC%9E%A5%EC%9D%84%20%EA%B2%80%EC%A6%9D%EC%97%86%EC%9D%B4%20%EB%B0%9B%EC%95%84%EC%93%B0%EB%A9%B4%EC%84%9C%20%EC%A6%9D%ED%8F%AD%EC%8B%9C%ED%82%A8%20%ED%81%B0%20%EC%B1%85%EC%9E%84%EC%9D%80%20%EC%96%B8%EB%A1%A0%EC%97%90%20%EC%9E%88%EB%8B%A4%EB%8A%94%20%EB%B9%84%ED%8C%90%EC%9D%B4%20%EB%82%98%EC%98%A8%EB%8B%A4.%20%ED%95%98%EB%A3%A8%EC%A0%84%EB%82%A0%EA%B9%8C%EC%A7%80%20%EC%82%AC%EB%A7%9D%ED%96%88%EB%8B%A4%EB%8A%94%20%EB%B3%B4%EB%8F%84%EB%A5%BC%20%EC%8F%9F%EC%95%84%EB%83%88%EB%8B%A4%EB%8A%94%20%EC%A0%90%EC%97%90%EC%84%9C%20%EC%97%AD%EB%8C%80%EA%B8%89%20%EB%B3%B4%EB%8F%84%20%EC%B0%B8%EC%82%AC%EB%9D%BC%EB%8A%94%20%ED%8F%89%EA%B0%80%EB%8B%A4.%ED%97%88%EC%9C%84%EC%A7%80%EB%9D%BC%EC%8B%9C%EC%99%80%20%EA%B0%80%EC%A7%9C%EC%98%81%EC%83%81%EC%9D%84%20%EC%A0%9C%EC%9E%91%20%EC%9C%A0%ED%8F%AC%ED%95%9C%20%EC%9D%B4%EB%93%A4%EC%97%90%20%EA%B3%A0%EC%9D%98%EC%84%B1%EC%9D%B4%20%EC%9E%88%EB%8A%94%20%EA%B2%83%20%EC%95%84%EB%8B%88%EB%83%90%EB%8A%94%20%EC%9D%98%EB%AC%B8%EB%8F%84%20%ED%95%B4%EC%86%8C%EB%90%98%EC%A7%80%20%EC%95%8A%EC%95%98%EB%8B%A4.%20%EC%9D%98%EB%AC%B8%EC%9D%B4%20%EB%B3%B8%EA%B2%A9%20%ED%99%95%EC%82%B0%EB%90%A0%20%EB%95%8C%EB%8A%94%20%EA%B9%80%EC%A0%95%EC%9D%80%20%EA%B1%B4%EA%B0%95%EC%83%81%ED%83%9C%EB%A1%9C%20%EC%9E%94%EB%9C%A9%20%EC%98%AE" 
