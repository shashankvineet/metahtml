<script type="text/javascript" src="/script/form.js"></script>
<script type="text/javascript" src="/script/payment.js"></script>
<script>
$(function(){
    var $form=$("#SupportForm_id")
        ,inputData={"article_idxno":"","name":"","buyeremail":"","price":"","author_id":"","author_name":"","author_email":""}        ,$signUpUrl=""
        ,$subsPayUrl=""
        ,loginMode="off"
        ,nanumLinkUrl="http://www.ihappynanum.com/Nanum/B/BYD0JV0SSK"
        ,orgSupportType="B";

    // 정기구독 결제만료일
    var pmode="",
        edate="",
        edate_cal="";

    $(function(){
        _payment.init();

        // 후원 옵션 선택시
        $('input[name="support_type"]').on("click",function () {
            var supportType=$(this).val();
            if (supportType==orgSupportType) return false;
            orgSupportType=supportType;

            switch (supportType) {
                case 'B':
                    $("#price").val(5000);
                    $(".inp-free-payment").hide();
                    break;
                case 'C':
                    $("#price").val(10000);
                    $("#priceFree").val("10,000");
                    $(".inp-free-payment").show();
                    break;
                case 'D':
                case 'E':
                case 'P':
                    $("#price").val(0);
                    $(".inp-free-payment").hide();
                    break;
                default:
                    break;
            }
        });

        // 자유결제 버튼 클릭
        $(".btn-click-price").on("click",function () {
            var $this=$(this)
                ,click_price=price_free=total_price=0;

            click_price=parseInt($this.attr("data-price"));

            if (click_price==0) {
                $("#price").val(10000);
                $("#priceFree").val("10,000");
            } else {
                price_free = $("#priceFree").val().replace(/[^0-9]/g, '');
                price_free = parseInt(price_free)||0;

                total_price = price_free+click_price;
                $("#price").val(total_price);

                var tmps = $("#price").val().replace(/[^0-9]/g, '');
                var tmps2 = tmps.replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,");
                $("#priceFree").val(tmps2);
            }
        });

        // 폼 전송
        $form.submit(function(e) {
            var _this=this
                ,formData=new FormData();

            // 미디어오늘 정기 구독
            if ($("#supportType3").prop("checked")===true) {
                var subs_url=signUpUrl='';
                if (loginMode=="on") {
                    if (edate) {
                        if ((pmode=="M"&&edate_cal>30&&edate!='0000-00-00')||pmode=="U") {
                            alert("정기구독 기간이 남아 있습니다.");
                            return false;
                        }
                    }
                    subs_url='/member/subscript/';
                    window.open(subs_url);
                    return false;
                }

                signUpUrl="/member/";
                var signUpWin=window.open(signUpUrl);
                if (!signUpWin) alert("팝업창을 허용 해주세요.");
                return false;
            }

            // 미디어오늘 정기 후원
            if ($("#supportType4").prop("checked")===true) {
                var NanumWin=window.open(nanumLinkUrl);
                if (!NanumWin) alert("팝업창을 허용 해주세요.");
                return false;
            }

            // 페이팔
            if ($("#supportType5").prop("checked")===true) {
                document.support_paypal_form.submit();
                return false;
            }

            // 후원 금액 체크
            $('input[name="support_type"]').each(function(){
                var support_opt=""
                    ,price_free=0;

                if ($(this).prop("checked") == true) {
                    support_opt = $(this).val();
                    switch (support_opt) {
                        case "A":
                        case "B":
                            _this.price.value = $(this).attr("data-price");
                            break;
                        case "C":
                            if (_this.price_free.value<=0||_this.price_free.value=='NaN') _this.price.value=$(this).attr("data-price");
                            else {
                                price_free=$("#priceFree").val().replace(/[^0-9]/g, '');
                                price_free=(parseInt(price_free)>0)?parseInt(price_free):0;
                                _this.price.value=price_free;
                            }
                            break;
                        default:
                            _this.price.value=0;
                            break;
                    }
                }
            });

            if (parseInt(_this.price.value)<=0||_this.price.value=='NaN') {
                alert("후원하실 방법을 선택해주세요");
                return false;
            }

            // form data 파라미터
            formData.append("form_id", _this.form_id.value);
            for(var key in inputData){
                var elem=$form.find('[name="'+key+'"]')
                    ,elemVal="";
                if (elem.attr("type")=="radio"||elem.attr("type")=="checkbox") elemVal=_form.getValue($form, key);
                else elemVal=elem.val();
                if (elemVal==undefined) elemVal="";
                if (elem.attr("disabled")!=undefined) formData.append(key, "");
                else formData.append(key, elemVal);
            }

            // 데이터 확인
            /*for(var [pair1, pair2] of formData.entries()) {
                console.log(pair1+ ' = ' + pair2);
            }
            return false;*/

            // ajax 로 저장 처리
            $.ajax({
                method:"POST"
                ,url:"/form/register_support.php"
                ,data:formData
                ,dataType:"json"
                ,cache:false
                ,contentType: false
                ,processData:false
            })
            .done(function(data,rst){ console.log(data);
                if(typeof data=="string") data=JSON.parse(data);
                if(rst!="success"||data.result!="success"){
                    alert(data.msg||"문제가 생겼습니다. 잠시후 다시 시도 하여 주세요.");
                    return false;
                }

                var url="/form/payment_support.html?form_id=support&data_idxno="+data.data.idxno;
                top.location.href=url;
                /* 팝업창 막혀 있는 경우 때문에 페이지 이동으로
                var supportWin = window.open(url);
                if (supportWin==null) {
                    alert("팝업창을 허용 해주세요.");
                }
                */
            })
            .fail(function(){
                alert("문제가 생겼습니다. 잠시후 다시 시도 하여 주세요.");
            });
        });
    });
});
</script>
